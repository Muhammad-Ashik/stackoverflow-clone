# Environment Configuration Example
# Copy this to dev.env for local development

# Node Environment
NODE_ENV=development

# Server Port
PORT=4000

# Database URL (PostgreSQL connection string)
# Local: postgresql://postgres:postgres@localhost:5432/stackoverflow_db
# Render: postgresql://user:password@host/database (provided by Render)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/stackoverflow_db

# JWT Secret (generate a secure secret for production)
JWT_SECRET=your_jwt_secret_here_change_in_production

# JWT Expiration (optional, defaults to 7d)
JWT_EXPIRES_IN=7d

# CORS Origin (comma-separated for multiple, * for all)
CORS_ORIGIN=*

# PostgreSQL Container Configuration (for Docker only)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=stackoverflow_db
